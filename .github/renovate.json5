{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["on tuesday"],
  "enabledManagers": ["github-actions", "pixi", "cargo"],
  "commitMessagePrefix": "chore(ci):",
  "ignorePaths": ["**/examples/**", "**/docs/**", "**/tests/**"],
  "cargo": {
    // See https://docs.renovatebot.com/configuration-options/#rangestrategy
    "rangeStrategy": "update-lockfile",
  },
  "packageRules": [
    {
      "description": "Pin GitHub Actions to immutable SHAs.",
      "matchDepTypes": ["action"],
      "pinDigests": true,
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": ["github-actions"]
    },
    {
      "groupName": "Pixi-Lock",
      "matchManagers": ["pixi"],
      "matchUpdateTypes": ["lockFileMaintenance"]
    },
    {
      "description": "We want to update Rust manually and keep it in sync with rust-toolchain",
      "matchPackageNames": ["rust", "rust-src"],
      "matchManagers": ["pixi"],
      "enabled": false
    },
    {
      "groupName": "Cargo-Lock",
      "matchManagers": ["cargo"],
      "matchUpdateTypes": ["lockFileMaintenance"]
    },
    {
      "description": "We want a separate PR for all rattler crates",
      "matchPackageNames": ["rattler*", "file_url", "coalesced_map", "path_resolver", "simple_spawn_blocking"],
      "matchManagers": ["cargo"],
      "groupName": "rattler",
      "addLabels": ["rattler"]
    },
  ],
  "vulnerabilityAlerts": {
    "commitMessageSuffix": "",
    "labels": ["security"],
  },
}
