---
source: crates/pixi-build-r/src/build_script.rs
expression: script
---
R.exe CMD --version
@if errorlevel 1 exit 1



if not exist "%LIBRARY_PREFIX%\R\library" mkdir "%LIBRARY_PREFIX%\R\library"
@if errorlevel 1 exit 1



R.exe CMD INSTALL --library=%LIBRARY_PREFIX%\R\library ^
    --no-lock ^
    --no-multiarch ^
    /path/to/package


@if errorlevel 1 exit 1
